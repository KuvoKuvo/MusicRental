<Window x:Class="MusicRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicRental"
        xmlns:converters="clr-namespace:MusicRental.Сonverters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Window.Resources>
        <converters:DiscountConverter x:Key="DiscountConverter"/>
        <converters:PriceConverter x:Key="PriceConverter"/>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="ProductsListBox" ItemsSource="{Binding Products}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" Padding="10,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="300" Height="300" BorderBrush="Black" BorderThickness="1" Background="#F5F5F5" CornerRadius="4">
                                <Image Source="{Binding ImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="10,0" CornerRadius="4">
                                <StackPanel VerticalAlignment="Top" Margin="10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#333333" TextWrapping="Wrap"/>
                                        <TextBlock Text=" — " FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="5,0"/>
                                        <TextBlock Text="{Binding EquipmentType.Name}" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Maker.Name, StringFormat='Производитель: {0}'}" FontSize="14" Foreground="#666666" Margin="0,10,0,0"/>
                                    <TextBlock Text="{Binding Supplier.Name, StringFormat='Поставщик: {0}'}" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding RentalUnit.Name, StringFormat='Единица аренды: {0}'}" 
                                                   FontSize="14" Foreground="#666666"/>

                                        <TextBlock Grid.Column="2" FontSize="14" Margin="0,0,500,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding AvailableQuantity, StringFormat='В наличии: {0} шт.'}"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                    <Setter Property="TextDecorations" Value="{x:Null}"/>

                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AvailableQuantity}" Value="0">
                                                            <Setter Property="Text" Value="Нет в наличии"/>
                                                            <Setter Property="Foreground" Value="#FFC3B036"/>
                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#888888" TextWrapping="Wrap" Margin="0,10,0,0" MaxHeight="100"/>
                                </StackPanel>
                            </Border>
                            <Grid Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Padding="8,4" CornerRadius="4" Margin="0,0,0,10" BorderBrush="Black" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" TextAlignment="Center">
                                            <Run Text="Цена продажи: "/>
                                            <Run>
                                                <Run.Text>
                                                    <MultiBinding Converter="{StaticResource PriceConverter}" ConverterParameter="Price">
                                                        <Binding Path="RentalCost"/>
                                                        <Binding Path="Discount"/>
                                                    </MultiBinding>
                                                </Run.Text>
                                            </Run>
                                            <Run Text=" Р"/>
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource PriceConverter}" ConverterParameter="PriceForeground">
                                                    <Binding Path="RentalCost"/>
                                                    <Binding Path="Discount"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                            <TextBlock.TextDecorations>
                                                <MultiBinding Converter="{StaticResource PriceConverter}" ConverterParameter="PriceDecorations">
                                                    <Binding Path="RentalCost"/>
                                                    <Binding Path="Discount"/>
                                                </MultiBinding>
                                            </TextBlock.TextDecorations>
                                        </TextBlock>

                                        <TextBlock FontWeight="Bold" TextAlignment="Center" Foreground="Black"
                                                   Visibility="{Binding Discount, Converter={StaticResource DiscountConverter}, ConverterParameter=Visibility}">
                                            <Run Text="Цена продажи: "/>
                                            <Run>
                                                <Run.Text>
                                                    <MultiBinding Converter="{StaticResource PriceConverter}" ConverterParameter="FinalPrice">
                                                        <Binding Path="RentalCost"/>
                                                        <Binding Path="Discount"/>
                                                    </MultiBinding>
                                                </Run.Text>
                                            </Run>
                                            <Run Text=" Р"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" Width="80" Height="80" CornerRadius="4" VerticalAlignment="Top" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock Text="{Binding Discount, StringFormat='-{0}%'}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Foreground="{Binding Discount, Converter={StaticResource DiscountConverter}, ConverterParameter=Color}"
                                               TextDecorations="{Binding Discount, Converter={StaticResource DiscountConverter}, ConverterParameter=Decorations}"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
